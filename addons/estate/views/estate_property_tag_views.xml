<?xml version="1.0"?>
<odoo>
    <data>
        <!-- EVENT.TAG.CATEGORY VIEWS -->
        <record id="estate_property_tag_tree" model="ir.ui.view">
            <field name="name">Property type tag</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree string="Event Category">
                    <!-- <field name="sequence" widget="handle" /> -->
                    <field name="name" />
                    <field name="color" />
                </tree>
            </field>
        </record>

        <record id="estate_property_tag_form" model="ir.ui.view">
            <field name="name">event_tag_category_view_form</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Event Category">
                    <sheet>
                        <div class="oe_title">
                            <header>
                                <h1>
                                    <field name="name" />
                                </h1>

                                <h4>
                                    <group>
                                        <field name="color" />
                                    </group>
                                </h4>
                            </header>

                        </div>
                        <notebook>
                            <page string="Properties">
                                <group>
                                    <field name="property_ids" string="">
                                        <tree string="Tags" editable="bottom">
                                            <field name="name" string="Title" />
                                            <field name="expected_price" />
                                            <field name="state" string="Status" />
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>