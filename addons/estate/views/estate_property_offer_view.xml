<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="estate_property_offer_tree">
            <field name="name">Property type tag</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Offers">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_set_property_offer_as_accepted"
                        string="Accept"
                        type="object"
                        icon="fa-check" />
                    <button name="action_set_property_offer_as_refused"
                        string="Cancel"
                        type="object"
                        icon="fa-times" />
                    <field name="status" />

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="estate_property_offer_form">
            <field name="name">Estate property offers</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="partner_id" />
                            <field name="validity" />
                            <field name="date_deadline" />
                            <field name="status" />

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>