<odoo>
    <data>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="estate.action_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        <record model="ir.actions.act_window" id="estate_type_action_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Top menu item -->
        <menuitem name="Real Estate" id="estate.menu_root" />
        <!-- menu categories -->
        <menuitem name="Adertisements" id="estate_advertisement_menu" parent="estate.menu_root" />
        <menuitem name="Settings" id="estate_settings_menu" parent="estate.menu_root" />
        <!-- actions -->
        <menuitem name="Properties" id="estate_property_menu" parent="estate_advertisement_menu"
            action="estate.action_window" />
        <menuitem name="Property Types" id="estate_property_type_menu" parent="estate_settings_menu"
            action="estate_type_action_window" />
    </data>
</odoo>