<odoo>
    <data>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="estate_action_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="estate_property_type_action_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="estate_property_tag_action_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Top menu item -->
        <menuitem
            id="estate.menu_root"
            name="Real Estate" />
        <!-- menu categories -->
        <menuitem
            id="estate_advertisement_menu"
            name="Adertisements"
            parent="estate.menu_root" />
        <menuitem
            id="estate_settings_menu"
            name="Settings"
            parent="estate.menu_root" />
        <!-- actions -->
        <menuitem
            id="estate_property_menu"
            name="Properties"
            parent="estate_advertisement_menu"
            action="estate_action_window" />
        <menuitem
            id="estate_property_type_menu"
            name="Property Types"
            parent="estate_settings_menu"
            action="estate_property_type_action_window" />
        <menuitem
            id="estate_property_tag_menu"
            name="Property Tags"
            parent="estate_settings_menu"
            action="estate_property_tag_action_window" />
    </data>
</odoo>