<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="estate_tree">
            <field name="name">estate_list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <tree> -->
                    <field name="name" />
                    <field name="description" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="facades" />
                    <field name="garden" />
                    <field name="garden_orientation" />
                    <field name="garage" />

                    <field name="date_availability" />
                    <field name="selling_price" />
                    <field name="living_area" />
                    <field name="garden_area" />
                    <field name="total_area" />

                    <field name="state" />
                    <field name="buyer_id" />
                    <field name="salesman_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="estate_form">
            <field name="name">estate_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <h1>

                            <field name="name">estate.property.name</field>

                        </h1>
                        <header>
                            <button name="action_set_estate_property_as_canceled" type="object"
                                string="CANCEL" />
                            <button name="action_set_estate_property_as_sold" type="object"
                                string="SOLD" />
                        </header>
                        <field name="tags_ids" widget="many2many_tags">estate.property.tags_ids</field>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description" />
                                        <field name="bedrooms" />
                                        <field name="facades" />
                                        <field name="garden" />
                                        <field name="garden_orientation"
                                            attrs="{'invisible':[('garden', '==', False)]}" />
                                        <field name="garage" />
                                        <field name="state" />
                                    </group>
                                    <group>
                                        <field name="living_area" />
                                        <field name="garden_area"
                                            attrs="{'invisible':[('garden', '==', False)]}" />
                                        <field name="total_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree multi_edit="1" sample="1">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                        <button name="action_set_property_offer_as_accepted"
                                            type="object"
                                            icon="fa-check" />
                                        <button name="action_set_property_offer_as_refused"
                                            type="object"
                                            icon="fa-times" />
                                        <field name="status" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id" />
                                    <field name="salesman_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="estate_search">
            <field name="name">estate_search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="description" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="facades" />
                    <field name="living_area" />
                    <field name="garden_area" />
                    <field name="date_availability" />

                    <!-- Filter -->
                    <filter string='Available properties' name='filter_by_properties'
                        domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                    <filter string='Sold properties' name='filter_sold_properties'
                        domain="[('state', '=', 'sold')]" />

                    <!-- Group by -->
                    <filter string='Postcode' name='group_by_postcode'
                        context='{"group_by":"postcode"}' />
                    <filter string='State' name='group_by_state' context='{"group_by":"state"}' />

                </search>
            </field>
        </record>
    </data>
</odoo>